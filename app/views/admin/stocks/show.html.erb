<p style="color: green"><%= notice %></p>
<h1 class="font-bold text-4xl">Showing Stocks</h1>
 <br/>
  <div class="d-flex gap-2">
    <h3 style="color: #3498db;">Size:</h3>
    <h3><%= @admin_stock.size %></h3>
  </div>
  <br/>
  <div class="d-flex gap-2">
    <h3 style="color: #3498db;">Amount:</h3>
    <h3><%= @admin_stock.amount %></h3>
  </div>
  <br/>
  <div class="d-flex gap-2">
    <h3 style="color: #3498db;">ProductId:</h3>
    <h3><%= @admin_stock.product_id %></h3>
  </div>
  <br/>

<div class="d-flex gap-2">
  <%= link_to "Edit this stock", edit_admin_product_stock_path(@admin_stock), class:"btn btn-secondary" %> 
  <%= link_to "Back to stocks", admin_product_stocks_path, class:"btn btn-dark" %>
  <%= button_to "Destroy this stock", admin_product_stocks_path(@admin_stock), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
</div>

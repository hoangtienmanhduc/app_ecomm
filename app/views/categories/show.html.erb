<h1 class="text-center my-4">Category Show Page</h1>

<div class="container min-vh-100 d-flex flex-column align-items-center">
    <div class="mb-4">
        <h2 class="h4 text-secondary">Filter</h2>
    </div>

    <div class="row g-4 justify-content-center">
        <% if @products.empty? %>
            <p class="text-center text-muted fs-4">No products found</p>
        <% else %>
            <% @products.each do |product| %>
                <div class="col-md-4 col-lg-3">
                    <%= link_to product_path(product), class: "text-decoration-none text-dark" do %>
                        <div class="card shadow-sm text-center p-3">
                            <%= product.images.any? ? image_tag(product.images.first) : image_tag("https://dummyimage.com/520x520/000/fff", class: "img-fluid rounded") %>                         
                            <p class="mt-3 fw-semibold"><%= product.name %></p>
                        </div>
                    <% end %>
                </div>
            <% end %>
        <% end %>
    </div>
</div>

<div class="container text-white text-center" style="max-width: 100%; background-color: #484848;">
    <div class="container">
        <h1>Welcome to Ecomm</h1>
        <p>Your one-stop shop for all your e-commerce needs!</p>
        <%= link_to "Shop now", root_path, class:"btn btn-secondary" %>
    </div>
</div>

<div style="max-width: 100%;">
  <div class="row g-4 justify-content-center">
    <% @main_categories.each do |category| %>
      <div class="col-md-3 d-flex justify-content-center">
        <%= link_to category_path(category), class: "w-100 text-decoration-none" do %>
          <div class="d-flex flex-column align-items-center justify-content-center p-3" 
               style="border-radius: 10px; height: 300px;">
            <h4 class="text-black text-center"><%= category.name %></h4>
            <div class="d-flex justify-content-center align-items-center" style="width: 100%; height: 90%;">
              <%= category.image.present? ? image_tag(category.image, style: "height: 100%; width: 100%; border-radius: 10px") : image_tag("https://www.google.com") %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

